pipeline {
    agent any

    tools {
        maven 'Maven-3.9.9'  // Nome da instalação do Maven configurada no Jenkins
    }

    environment {
        DB_URL = 'jdbc:oracle:thin:@//172.24.208.1:1521/XEPDB1'
        DB_USER = 'GRA_USER'
        DB_PASSWORD = 'password'
    }

    triggers {
    cron('H 0 * * *')  // Executa diariamente à meia-noite
}

    stages {

        stage('Build Dependent Project') {
            steps {
                build job: 'commons-test', propagate: true
            }
        }

        stage('Checkout SCM') {
            steps {
                git branch: 'main', url: 'https://github.com/OliveiraFernandoSantos/kawhy-import-test.git'
            }
        }
        stage('Build') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'oracle-db-credentials', usernameVariable: 'DB_USER', passwordVariable: 'DB_PASSWORD')]) {
                    sh 'mvn clean package -Ddb.url=${DB_URL} -Ddb.user=${DB_USER} -Dspring.datasource.password=${DB_PASSWORD}'
                }
            }
        }
        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('sq1') {
                    sh 'mvn sonar:sonar -Dsonar.projectKey=kawhy-import-test -Dsonar.host.url=http://172.24.208.1:9000 -Dsonar.login=${SONAR_AUTH_TOKEN}'

                }
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploy stage is not yet configured.'
            }
        }
    }

    post {
        always {
            // Arquivar artefatos do build
            archiveArtifacts artifacts: '**/target/*.jar', allowEmptyArchive: true
        }
        failure {
            echo 'Build, Test, or Deploy failed.'
        }
    }
}
