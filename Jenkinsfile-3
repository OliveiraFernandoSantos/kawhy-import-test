pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Checkout do reposit√≥rio
                git branch: 'main', url: 'https://github.com/OliveiraFernandoSantos/kawhy-import-test.git'
            }
        }

        stage('Build') {
            steps {
                // Construir o projeto com Maven
                sh 'mvn clean install'
            }
        }

        stage('Test') {
            steps {
                // Executar os testes com Maven
                sh 'mvn test'
            }
        }

        stage('Publish Test Results') {
            steps {
                // Publicar os resultados dos testes
                junit '**/target/surefire-reports/*.xml'
            }
        }
    }

    post {
        always {
            // Notificar falhas ou sucesso de build
            echo 'Build, Test, or Deploy completed.'
        }
    }
}
